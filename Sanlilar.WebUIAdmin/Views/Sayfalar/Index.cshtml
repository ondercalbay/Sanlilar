@model IEnumerable<Sanlilar.Dto.SayfaListDto>

@{
    ViewBag.Title = "Sayfalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sayfalar</h2>

<p>
    @Html.ActionLink("Yeni", "Edit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SayfaTipi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SayfaTipi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new {  id=item.Id  })           
        </td>
    </tr>
}

</table>
