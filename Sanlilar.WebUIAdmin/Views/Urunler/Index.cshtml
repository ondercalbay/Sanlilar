@model IEnumerable<Sanlilar.Dto.UrunListDto>

@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>

<p>
    <a class="btn btn-primary" href=@("/Urunler/Edit/")><i class="glyphicon glyphicon-plus"></i> Yeni</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                <a class="btn btn-xs btn-primary" href=@("/Urunler/Edit/"+item.Id) data-toggle="tooltip" title="Düzenle"><i class="glyphicon glyphicon-pencil"></i></a>
                <a class="btn btn-xs btn-danger" href=@("/Urunler/Delete/" + item.Id) data-toggle="tooltip" title="Sil"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }

</table>
