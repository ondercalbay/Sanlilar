@model IEnumerable<Sanlilar.Dto.KategoriListDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni", "Edit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UstKategoriAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Adi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UstKategoriAdi)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id = item.Id })
        </td>
    </tr>
}

</table>
