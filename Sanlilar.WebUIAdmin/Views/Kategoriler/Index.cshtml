@model IEnumerable<Sanlilar.Dto.KategoriListDto>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    <a class="btn btn-primary" href=@("/Kategoriler/Edit/")><i class="glyphicon glyphicon-plus"></i> Yeni</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adi)
        </th>
        <th>
            Alt Kategori Ekle
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adi)
            </td>
            <td>
                @*@Html.ActionLink("Alt Kategori Ekle", "Edit", new { ustKategoriId = item.Id })*@
                <a class="btn btn-xs btn-primary" href=@("/Kategoriler/Edit?ustKategoriId="+item.Id)><i class="glyphicon glyphicon-plus"></i> Alt Kategori Ekle</a>
            </td>
            <td>
                <a class="btn btn-xs btn-primary" href=@("/Kategoriler/Edit/"+item.Id) data-toggle="tooltip" title="Düzenle"><i class="glyphicon glyphicon-pencil"></i></a>
                <a class="btn btn-xs btn-danger" href=@("/Kategoriler/Delete/" + item.Id) data-toggle="tooltip" title="Sil"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }

</table>
