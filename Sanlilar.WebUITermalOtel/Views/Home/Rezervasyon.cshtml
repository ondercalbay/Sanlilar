@model Sanlilar.Dto.SayfaDetailDto

@{
    ViewBag.Title = "Rezervasyon";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<link rel="stylesheet" href="demos/travel/css/datepicker.css" type="text/css" />
<link rel="stylesheet" href="css/components/timepicker.css" type="text/css" />
<link rel="stylesheet" href="css/components/daterangepicker.css" type="text/css" />
<script>
    function SetMinTarih() {
        document.getElementById("txtGirisTarihi").onchange = function () {
            var input = document.getElementById("txtCikisTarihi");
            input.setAttribute("min", this.value);
        }
    }
</script>
<!-- Page Title
============================================= -->
<section id="page-title" onload="SetMinTarih();">

    <div class="container clearfix">
        <h1>Rezervasyon</h1>
        <span>Bilgileri doldurun biz sizi arayalım.</span>
        <ol class="breadcrumb">
            <li><a href="/">Anasayfa</a></li>
            <li class="active">Rezervasyon</li>
        </ol>
    </div>
</section><!-- #page-title end -->


<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
            <div class="contact-widget">

                <div class="contact-form-result"></div>

                <form class="nobottommargin" id="template-contactform" name="template-contactform" action="home/Rezervasyon" method="post">

                    <div class="form-process"></div>

                    <div class="col_one_third">
                        <label for="adsoyad">ADINIZ SOYADINIZ <small>*</small></label>
                        <input type="text" id="adsoyad" name="adsoyad" value="" class="sm-form-control required" />
                    </div>

                    <div class="col_one_third">
                        <label for="eposta">E-POSTA ADRESINIZ<small>*</small></label>
                        <input type="email" id="eposta" name="eposta" value="" class="required email sm-form-control" />
                    </div>

                    <div class="col_one_third col_last">
                        <label for="telefon">TELEFON NUMARANIZ</label>
                        <input type="text" id="telefon" name="telefon" value="" class="sm-form-control" />
                    </div>

                    <div class="col_one_third">
                        <label for="girisTarihi">GİRİŞ TARİHİNİZ<small>*</small></label>
                        <input type="date" id="girisTarihi" name="girisTarihi" value="" class="sm-form-control tleft today" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col_one_third col_last">
                        <label for="cikisTarihi">ÇIKIŞ TARİHİNİZ</label>
                        <input type="date" id="cikisTarihi" name="cikisTarihi" value="" class="sm-form-control tleft today" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                    </div>


                    <div class="clear"></div>

                    @*<div class="col_two_third">
                            <label for="template-contactform-subject">İletmenizi İstedikleriniz <small>*</small></label>
                            <input type="text" id="template-contactform-subject" name="template-contactform-subject" value="" class="required sm-form-control" />
                        </div>*@

                    @*<div class="col_one_third col_last">
                            <label for="template-contactform-service">Services</label>
                            <select id="template-contactform-service" name="template-contactform-service" class="sm-form-control">
                                <option value="">-- Select One --</option>
                                <option value="Wordpress">Wordpress</option>
                                <option value="PHP / MySQL">PHP / MySQL</option>
                                <option value="HTML5 / CSS3">HTML5 / CSS3</option>
                                <option value="Graphic Design">Graphic Design</option>
                            </select>
                        </div>*@

                    <div class="clear"></div>

                    <div class="col_full">
                        <label for="mesaj">İletmenizi İstedikleriniz <small>*</small></label>
                        <textarea class="required sm-form-control" id="mesaj" name="mesaj" rows="6" cols="30"></textarea>
                    </div>

                    <div class="col_full hidden">
                        <input type="text" id="template-contactform-botcheck" name="template-contactform-botcheck" value="" class="sm-form-control" />
                    </div>

                    <div class="col_full">
                        <button name="submit" type="submit" id="submit-button" tabindex="5" value="Submit" class="button button-3d nomargin">Rezerve Et</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>